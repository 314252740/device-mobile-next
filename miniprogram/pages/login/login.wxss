/* miniprogram/pages/login/login.wxss */
.login{
  width: 100%;
  height: 100%;
  position: relative;
}
.login-bg{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.login-container{
  width: 500rpx;
  height: 550rpx;
  border-radius: 20rpx;
  background-color: #fff;
  position: absolute;
  right: 0;
  left: 0;
  top: 280rpx;
  margin: auto;
  box-shadow:  26rpx 26rpx 52rpx #dbdbdb,
               -26rpx -26rpx 52rpx #ffffff;
}
.login-container_title{
  font-size: 40rpx;
  font-weight: 600;
  margin: 40rpx 0 60rpx 0;
}
.login-container-label{ 
  width: 100%;
}
